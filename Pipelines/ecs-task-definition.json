{
  "family": "iris-task",
  "containerDefinitions": [
    {
      "name": "iris-container",
      "image": "your-docker-image:latest",
      "cpu": 256,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/iris-logs",
          "awslogs-region": "your-region",
          "awslogs-stream-prefix": "iris-container"
        }
      }
    }
  ],
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512"
}
